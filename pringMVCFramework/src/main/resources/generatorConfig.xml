<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>
    <!-- 引入配置文件 -->
    <properties resource="generatorConfig.properties"/>

    <!--提供数据库驱动的jar文件路径-->
    <classPathEntry location="${classPath}"/>

    <!-- 一个数据库一个context -->
    <context id="DB2Tables" targetRuntime="MyBatis3">

        <plugin type="org.mybatis.generator.plugins.EqualsHashCodePlugin"/>
        <plugin type="org.mybatis.generator.plugins.SerializablePlugin"/>
        <plugin type="org.mybatis.generator.plugins.CaseInsensitiveLikePlugin"/>
        <!--<plugin type="org.mybatis.generator.plugins.RenameExampleClassPlugin">-->
        <!--<property name="searchString" value="Example$"/>-->
        <!--<property name="replaceString" value="Criteria"/>-->
        <!--</plugin>-->

        <!--分页插件-->
        <plugin type="com.shinowit.mybatis.plugin.SelectByPage4SqlServerPlugin"/>

        <jdbcConnection driverClass="${jdbc_driver}"
                        connectionURL="${jdbc_url}"
                        userId="${jdbc_user}"
                        password="${jdbc_password}">
        </jdbcConnection>


        <!--是否强制使用大写数字-->
        <javaTypeResolver>
            <!-- 是否使用bigDecimal， false可自动转化以下类型（Long, Integer, Short, etc.） -->
            <property name="forceBigDecimals" value="false"/>
        </javaTypeResolver>

        <!-- 生成实体类地址 -->
        <javaModelGenerator targetPackage="com.huaru.entity"
                            targetProject="${projectJava}">
            <!-- 是否在当前路径下新加一层schema,eg：fase路径com.huaru.entity，
            true:com.huaru.entity.[schemaName] -->
            <property name="enableSubPackages" value="true"/>
            <!-- 是否针对String类型的字段在set的时候进行trim调用 -->
            <property name="trimStrings" value="true"/>
        </javaModelGenerator>


        <!--需要与spring整合时必须保证xml文件与mapper接口在同一个package下面-->
        <sqlMapGenerator targetPackage="com.huaru.mapper"
                         targetProject="${projectResources}">
            <!-- 是否在当前路径下新加一层schema,eg：fase路径com.huaru.mapper，
            true:com.huaru.mapper.[schemaName] -->
            <property name="enableSubPackages" value="true"/>
        </sqlMapGenerator>

        <!-- 生成mapxml对应client，也就是接口dao -->
        <javaClientGenerator type="XMLMAPPER"
                             targetPackage="com.huaru.mapper" targetProject="${projectJava}">
            <!-- 是否在当前路径下新加一层schema,eg：fase路径com.huaru.mapper，
            true:com.huaru.mapper.[schemaName] -->
            <property name="enableSubPackages" value="true"/>
        </javaClientGenerator>

        <!--********************建表***********************-->
        <!--用户表-->
        <table tableName="T_USER">

        </table>

    </context>
</generatorConfiguration>