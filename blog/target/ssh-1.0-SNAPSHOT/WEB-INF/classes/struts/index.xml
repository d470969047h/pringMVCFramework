<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"    "http://struts.apache.org/dtds/struts-2.0.dtd">
<!-- 这是index页的配置 -->
<struts>
	<package name="blogshow" namespace="/blogshow" extends="struts-default">
	
		<action name="blogShow" class="com.shinowit.actions.BlogShowAction">
			<result>/WEB-INF/views/index.jsp</result>
		</action>

		<action name="indexlogin" class="com.shinowit.actions.IndexAction"
			method="login">
			<result name="ok">/WEB-INF/views/index.jsp</result>
			<result name="input">/WEB-INF/views/index.jsp</result>
		</action>
			
	</package>
</struts>